# Server Configuration
PORT=3000
NODE_ENV=development

# Deribit API Configuration
DERIBIT_API_URL=https://www.deribit.com/api/v2
DERIBIT_WS_URL=wss://www.deribit.com/ws/api/v2
DERIBIT_TEST_API_URL=https://test.deribit.com/api/v2
DERIBIT_TEST_WS_URL=wss://test.deribit.com/ws/api/v2

# Environment Configuration
# Use test environment by default (set to false for production)
USE_TEST_ENVIRONMENT=true
# Enable mock mode for development (set to false for real trading)
USE_MOCK_MODE=true

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
API_KEY_FILE=./config/apikeys.yml

# Polling Configuration
# Auto-start background polling services (true/false)
AUTO_START_POLLING=true
# Position polling interval in minutes - for monitoring and adjusting positions
POSITION_POLLING_INTERVAL_MINUTES=15
# Order polling interval in minutes - for handling unfilled orders
ORDER_POLLING_INTERVAL_MINUTES=5

# Trading Configuration
# Spread ratio threshold - determines if spread is acceptable (0.0-1.0)
SPREAD_RATIO_THRESHOLD=0.15
# Spread tick multiple threshold - (spread / minimum tick) <= this value means reasonable price
# 盘口价差步进倍数阈值：(盘口价差 / 价格最小步进) <= 此倍数时认为价差合理
SPREAD_TICK_MULTIPLE_THRESHOLD=2

# WeChat Bot Configuration
# Enterprise WeChat bot configuration is now in config/apikeys.yml file
# Each account can configure its own bot
# See wechat_bot configuration example in config/apikeys.example.yml

# Frontend Configuration
# Enable frontend static files serving
ENABLE_FRONTEND=true

# Database Configuration
# SQLite database file path
DATABASE_PATH=./data/delta_records.db