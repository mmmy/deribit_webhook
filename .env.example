# Server Configuration
PORT=3000
NODE_ENV=development

# Deribit API Configuration
DERIBIT_API_URL=https://www.deribit.com/api/v2
DERIBIT_WS_URL=wss://www.deribit.com/ws/api/v2
DERIBIT_TEST_API_URL=https://test.deribit.com/api/v2
DERIBIT_TEST_WS_URL=wss://test.deribit.com/ws/api/v2

# Use test environment by default (set to false for production)
USE_TEST_ENVIRONMENT=true

# Logging
LOG_LEVEL=info

# Security
API_KEY_FILE=./config/apikeys.yml

# Polling Configuration
AUTO_START_POLLING=true
# 仓位轮询间隔（分钟）- 用于监控和调整仓位
POSITION_POLLING_INTERVAL_MINUTES=15
# 订单轮询间隔（分钟）- 用于处理未成交订单
ORDER_POLLING_INTERVAL_MINUTES=5

# Trading Configuration
SPREAD_RATIO_THRESHOLD=0.15
# 盘口价差步进倍数阈值：(盘口价差 / 价格最小步进) <= 此倍数时认为价差合理
SPREAD_TICK_MULTIPLE_THRESHOLD=2

# WeChat Bot Configuration
# 企业微信机器人配置现在在 config/apikeys.yml 文件中
# 每个账户可以配置自己的机器人
# 详见 config/apikeys.example.yml 中的 wechat_bot 配置示例